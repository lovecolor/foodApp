<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginRight="16dp"
        android:id="@+id/imageView_restaurant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgounrd2" />

    <TextView
        android:id="@+id/name_textview_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_restaurant"
        app:layout_constraintTop_toTopOf="@+id/imageView_restaurant" />

    <TextView
        android:id="@+id/textView_first_meal_restaurant_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/name_textview_restaurant"
        app:layout_constraintStart_toStartOf="@+id/name_textview_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/name_textview_restaurant" />

    <ImageView
        android:id="@+id/imageView_ic_rate_res_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_restaurant"
        app:layout_constraintStart_toStartOf="@+id/textView_first_meal_restaurant_row"
        app:srcCompat="@drawable/ic_star"
        tools:ignore="VectorDrawableCompat"
        app:tint="@color/yellow" />

    <TextView
        android:id="@+id/textView_rate_restaurant_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ic_rate_res_row"
        app:layout_constraintStart_toEndOf="@+id/imageView_ic_rate_res_row"
        app:layout_constraintTop_toTopOf="@+id/imageView_ic_rate_res_row" />

    <TextView
        android:id="@+id/textView_qty_rate_res_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_rate_restaurant_row"
        app:layout_constraintStart_toEndOf="@+id/textView_rate_restaurant_row"
        app:layout_constraintTop_toTopOf="@+id/textView_rate_restaurant_row" />

    <TextView
        android:id="@+id/textView_distance_res_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@color/font"
        app:layout_constraintBottom_toBottomOf="@+id/textView_qty_rate_res_row"
        app:layout_constraintEnd_toEndOf="@+id/textView_first_meal_restaurant_row"
        app:layout_constraintStart_toEndOf="@+id/textView_qty_rate_res_row"
        app:layout_constraintTop_toTopOf="@+id/textView_qty_rate_res_row" />

</androidx.constraintlayout.widget.ConstraintLayout>