<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <ImageView

        android:id="@+id/imageView_status_history_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_status_history_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_status_history_order"
        app:layout_constraintStart_toEndOf="@+id/imageView_status_history_order"
        app:layout_constraintTop_toTopOf="@+id/imageView_status_history_order" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView_date_history_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_status_history_row"
        app:layout_constraintStart_toEndOf="@+id/textView_status_history_row"
        app:layout_constraintTop_toTopOf="@+id/textView_status_history_row" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_bought_history_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@android:color/darker_gray"
        tools:ignore="VectorDrawableCompat" />

    <TextView

        android:id="@+id/textView_name_restaurant_history_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="TextView"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView_status_history_order"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status_history_order" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView_price_history_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/textView_name_restaurant_history_row"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_restaurant_history_row" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView_type_pay_history_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_price_history_row"
        app:layout_constraintStart_toEndOf="@+id/textView_price_history_row"
        app:layout_constraintTop_toTopOf="@+id/textView_price_history_row" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/textView_qty_history_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_type_pay_history_row"
        app:layout_constraintStart_toEndOf="@+id/textView_type_pay_history_row"
        app:layout_constraintTop_toTopOf="@+id/textView_type_pay_history_row" />

    <TextView
        android:background="@drawable/rounded_btn_order_again"
        android:id="@+id/btn_bought_history_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableTop="@android:color/darker_gray"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="Order again"
        android:textColor="@color/main"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_qty_history_row" />
</androidx.constraintlayout.widget.ConstraintLayout>