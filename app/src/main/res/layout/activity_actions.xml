<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".actionsActivity">

    <TextView
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingRight="16dp"
        android:drawableTint="@color/white"
        android:id="@+id/username_textView_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circleimageview_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleimageview_action"
        app:layout_constraintTop_toTopOf="@+id/circleimageview_action" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_action"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:background="@color/background"
        android:id="@+id/linerlayout_action"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleimageview_action">

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_my_order_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="My Order"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_favourite_restaurant_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Favourite Restaurant"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_manage_pay_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Manage Pay"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_coupon_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Coupon"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_save_address_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Saved Adress"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:drawableTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_btn_order_again"
            android:id="@+id/textView_support_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Support"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>