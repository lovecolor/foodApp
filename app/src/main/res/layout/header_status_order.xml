<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView_status_header_status_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Finding driver"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_notification_header_status" />

    <TextView
        android:id="@+id/btn_cancel_order_header_status_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_btn_cancel_order"
        android:paddingHorizontal="25dp"
        android:paddingVertical="5dp"
        android:text="Cancel order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_status_header_status_order" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel_order_header_status_order"
        app:srcCompat="@drawable/cat_beamin_img" />

    <TextView
        android:id="@+id/textview_notification_header_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Order is pending"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_checking_header_status_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Checking"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_arrived_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Arrived"
        app:layout_constraintBottom_toBottomOf="@+id/textView_checking_header_status_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_checking_header_status_order" />

    <TextView
        android:id="@+id/textView_preparing_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text="Preparing"
        app:layout_constraintBottom_toBottomOf="@+id/textView_checking_header_status_order"
        app:layout_constraintStart_toEndOf="@+id/textView_checking_header_status_order"
        app:layout_constraintTop_toTopOf="@+id/textView_checking_header_status_order" />

    <TextView
        android:id="@+id/textView_delivering_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivering"
        app:layout_constraintBottom_toBottomOf="@+id/textView_arrived_head"
        app:layout_constraintEnd_toStartOf="@+id/textView_arrived_head"
        app:layout_constraintStart_toEndOf="@+id/textView_preparing_head"
        app:layout_constraintTop_toTopOf="@+id/textView_arrived_head" />

    <TextView
        android:id="@+id/textView_time_checking_header_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_checking_header_status_order"
        app:layout_constraintStart_toStartOf="@+id/textView_checking_header_status_order"
        app:layout_constraintTop_toBottomOf="@+id/textView_checking_header_status_order" />

    <TextView
        android:id="@+id/textView_time_preparing_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView_time_checking_header_status"
        app:layout_constraintEnd_toEndOf="@+id/textView_preparing_head"
        app:layout_constraintStart_toStartOf="@+id/textView_preparing_head"
        app:layout_constraintTop_toTopOf="@+id/textView_time_checking_header_status" />

    <TextView
        android:id="@+id/textView__time_delivering_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView_time_preparing_header"
        app:layout_constraintEnd_toEndOf="@+id/textView_delivering_head"
        app:layout_constraintStart_toStartOf="@+id/textView_delivering_head"
        app:layout_constraintTop_toTopOf="@+id/textView_time_preparing_header" />

    <TextView
        android:id="@+id/textView_time_arived_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView__time_delivering_header"
        app:layout_constraintEnd_toEndOf="@+id/textView_arrived_head"
        app:layout_constraintStart_toStartOf="@+id/textView_arrived_head"
        app:layout_constraintTop_toTopOf="@+id/textView__time_delivering_header"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton_close_head_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        android:background="@color/white"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>